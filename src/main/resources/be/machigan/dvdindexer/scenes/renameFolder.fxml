<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="be.machigan.dvdindexer.controllers.RenameFolderController"
      alignment="CENTER"
>
    <GridPane
            VBox.vgrow="ALWAYS"
            vgap="10"
            hgap="10"
            alignment="CENTER"
    >
        <TextField fx:id="newName" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Button
                text="Appliquer"
                GridPane.columnIndex="1"
                GridPane.rowIndex="0"
                onAction="#onClickValidateButton"
        />
    </GridPane>
    <Label fx:id="resultLabel">
        <padding>
            <Insets bottom="10"/>
        </padding>
    </Label>
</VBox>
